<div
  class="form-field-container">
  <label
    for="{{id}}">{{ label }}</label>
  {% if type == "textarea" %}
    <textarea
      type="{{type}}"
      name="{{name}}"
      id="{{id}}"></textarea>
  {% elsif type == "select" %}
    <select
      name="{{name}}"
      id="{{id}}">
      <option>Male</option>
      <option>Female</option>
    </select>
  {% else %}
    <input
      type="{{type}}"
      name="{{name}}"
      id="{{id}}" />
  {% endif %}

</div>